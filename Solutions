    "def unit_formula():\n",
    "    \"\"\"\n",
    "    Display conversion formulas based on user's choices.\n",
    "    \"\"\"\n",
    "    print(\"Conversion Formulas:\")\n",
    "\n",
    "    print(\"Choose which conversion formulas to display:\")\n",
    "    print(\"1. English to Metric Conversion\")\n",
    "    print(\"2. Metric to English Conversion\")\n",
    "    choice = input(\"Enter your choice(s) separated by comma (e.g., '1,2'): \")\n",
    "\n",
    "    choices = [int(c.strip()) for c in choice.split(',')]\n",
    "    for choice in choices:\n",
    "        if choice == 1:\n",
    "            print(\"English to Metric Conversion:\")\n",
    "            print(\"1 inch = 2.54 centimeters\")\n",
    "            print(\"1 foot = 30.48 centimeters\")\n",
    "            print(\"1 yard = 91.44 centimeters\")\n",
    "            print(\"1 mile = 160934.4 centimeters\")\n",
    "            print(\"1 ounce = 28 grams\")\n",
    "            print(\"1 pound = 453 grams\")\n",
    "            print(\"1 stone = 6.4 kilograms\")\n",
    "            print(\"1 pint = 568 milliliters\")\n",
    "            print(\"1 gallon = 4.5 litres\")\n",
    "           \n",
    "        elif choice == 2:\n",
    "            print(\"Metric to English Conversion:\")\n",
    "            print(\"1 meter = 100 centimeters\")\n",
    "            print(\"1 kilometer = 100000 centimeters\")\n",
    "            print(\"1 centimeter = 0.01 meters\")\n",
    "            print(\"1 centimeter = 0.00001 kilometers\")\n",
    "     \n",
    "        else:\n",
    "            print(f\"Invalid choice: {choice}\")\n",
    "\n",
    "unit_formula()"
